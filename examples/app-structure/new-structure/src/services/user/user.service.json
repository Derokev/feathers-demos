{
  "name": "users",
  "require": "feathers-mongodb",
  "options": {
    "Model": "./user.model",
    "paginate": {
      "default": 5,
      "max": 20
    }
  },
  "before": {
    "create": [
      {
        "require": "./hooks/my-hash-Password",
        "options": {
          "passwordField": "config.auth.passwordField"
        }
      }
    ],
    "find": [
      "feathers-authentication/hooks/verify-token",
      "feathers-authentication/hooks/populate-user",
      "feathers-authentication/hooks/restrict-to-authenticated"
    ]
  },
  "after": {
    "create": [
      "./hooks/send-welcome"
    ]
  }
}